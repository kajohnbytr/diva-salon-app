<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:layout_marginTop="73dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/back_arrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/tvforgotPassword"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/inter_semibold"
            android:text="Account Verification"
            android:textColor="@color/black"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="73dp" />

        <TextView
            android:id="@+id/tvEnterEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.5"
            android:fontFamily="@font/inter_medium"
            android:text="We just send a code to your email address.
Please enter the code to verify your account."
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="139dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="206dp">

            <EditText
                android:id="@+id/firstotp"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:hint="0"
                android:textSize="30sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:inputType="number"
                android:background="@drawable/otp"/>

            <EditText
                android:id="@+id/secondotp"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:inputType="number"
                android:hint="0"
                android:textSize="30sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:layout_marginLeft="13dp"
                android:background="@drawable/otp"/>

            <EditText
                android:id="@+id/thirdotp"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:inputType="number"
                android:hint="0"
                android:textSize="30sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:background="@drawable/otp"/>


            <EditText
                android:id="@+id/fourthotp"
                android:layout_width="50dp"
                android:inputType="number"
                android:layout_height="55dp"
                android:hint="0"
                android:textSize="30sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:background="@drawable/otp"/>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="46dp"
            android:backgroundTint="@color/black"
            android:text="Next" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Did not get the code? Resend code."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>