<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EBEBEB">


    <ImageButton
        android:id="@+id/IBBackbtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:background="@drawable/back_arrow"
        android:contentDescription="Null"
        android:paddingStart="16dp"
        tools:ignore="HardcodedText,KeyboardInaccessibleWidget,RtlSymmetry,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvforgotPassword"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="125dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Forgot Password"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvEnterEmail"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="138dp"
        android:alpha="0.75"
        android:text="Enter your email address"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="337dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="221dp"
        android:alpha="0.5"
        android:background="@drawable/foredittext"
        android:fontFamily="@font/inter_medium"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:paddingLeft="21dp"
        android:textSize="13sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,RtlSymmetry,TextContrastCheck" />

    <Button
        android:onClick="next"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="291dp"
        android:backgroundTint="@color/black"
        android:text="@string/next" />


</RelativeLayout>